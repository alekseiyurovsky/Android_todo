<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarItemBackground">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.Red" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorRedPrimary</item>
        <item name="colorPrimaryDark">@color/colorRedPrimaryDark</item>
        <item name="colorAccent">@color/colorRedAccent</item>
        <item name="actionBarItemBackground">@color/colorRedPrimary</item>
    </style>
</resources>
